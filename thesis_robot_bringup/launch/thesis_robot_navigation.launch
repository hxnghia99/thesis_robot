<launch>
  <!-- Arguments -->
  <arg name="map_file" default="$(find robot_navigation)/maps/map.yaml"/>
  <arg name="open_rviz" default="false"/>
  <arg name="move_forward_only" default="false"/>
  <arg name="scan_matcher"      default="false"/>

  <include file="$(find thesis_robot_bringup)/launch/thesis_robot_remote.launch"/>

  <include if="$(arg scan_matcher)" file="$(find thesis_robot_bringup)/launch/thesis_robot_scan_matcher.launch"/>

  <!-- Map server -->
  <node pkg="map_server" name="map_server" type="map_server" args="$(arg map_file)"/>

  <!-- AMCL -->
  <include file="$(find robot_navigation)/launch/amcl.launch"/>

  <!-- move_base -->
  <include file="$(find robot_navigation)/launch/move_base.launch">
    <arg name="move_forward_only" value="$(arg move_forward_only)"/>
  </include>

  <!-- rviz -->
  <group if="$(arg open_rviz)"> 
    <node pkg="rviz" type="rviz" name="rviz" required="true"
          args="-d $(find robot_navigation)/rviz/robot_navigation.rviz"/>
  </group>
</launch>
